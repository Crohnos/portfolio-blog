---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';
import { formatDate } from '../utils/dateFormat';
import CategoryBadge from '../components/CategoryBadge.astro';

interface Props {
  post: CollectionEntry<'blog'>;
  readingTime: string;
}

const { post, readingTime } = Astro.props;
const { title, date, author, categories, image } = post.data;
const formattedDate = formatDate(date);

// Set up meta tags
const description = post.data.description || `${title} - A blog post by ${author}`;
const ogImage = image || '/images/default-post.jpg';
---

<BaseLayout title={title} description={description} image={ogImage} pageType="article">
  <article class="blog-post">
    <header class="post-header">
      <h1 class="post-title">{title}</h1>
      <div class="post-meta">
        <div class="post-author">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          <span>{author}</span>
        </div>
        <div class="post-date">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <span>{formattedDate}</span>
        </div>
        <div class="post-reading-time">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          <span>{readingTime}</span>
        </div>
      </div>
      <div class="post-categories">
        {categories.map(category => (
          <CategoryBadge category={category} />
        ))}
      </div>
    </header>
    
    <div class="post-content">
      <slot />
    </div>
    
    <a href="/" class="back-link">‚Üê Back to Home</a>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .post-header {
    margin-bottom: 2rem;
  }
  
  .post-title {
    margin-bottom: 0.5rem;
  }
  
  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--muted-color);
  }
  
  .post-author, .post-date, .post-reading-time {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }
  
  .post-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .post-content {
    line-height: 1.7;
  }
  
  .post-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .post-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }
  
  .post-content :global(pre) {
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
  }
  
  .back-link {
    display: inline-block;
    margin-top: 3rem;
  }
</style>